{war-link}
<div class="dtop" style="margin-top: 15px;">
		<div class="lcol">
			<span>
				<img src="{foto}" width="32" class="comments_avatar" />
			</span>
		</div>
		<div style="margin-left: 210px;">{date}</div>
		<div class="">
			<span class="reply_comm">
				[fast] <b>Цитата</b>[/fast]
			</span>
			<ul class="header_comm">
				<div class="author">{author}</div>
				<div style="margin-left: 50px; ">
					Статус: [online]
					<img src="{THEME}/images/online.png" style="vertical-align: middle;" title="Пользователь Онлайн" alt="Пользователь Онлайн" />
					[/online]
					[offline]
					<img src="{THEME}/images/offline.png" style="vertical-align: middle;" title="Пользователь offline" alt="Пользователь offline" />
					[/offline]
				</div>
				<div class="select_comm">{mass-action}</div>
				<div class="comment" style="margin-top: 30px;">{comment}</div>
			</ul>
		</div>
		<div class="clr"></div>
	</div>
[group=1,2,3]
		<div class="comedit">
			<ul class="edit_comm">
				<li>[com-edit]Изменить[/com-edit]</li>
			</ul>
		</div>
[/group]
<div class="dcont">
		[aviable=lastcomments]
		<h3 style="margin-bottom: 0.4em;">{news_title}</h3>
		[/aviable]
		[signature]
		<br clear="all" />
		<div class="signature">--------------------</div>
		<div class="slink">{signature}</div>
		[/signature]
		<div class="clr"></div>
</div>